<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BeduCompras" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_bedu</item>  <!-- utilizado para el app bar y otros elementos UI primario -->
        <item name="colorPrimaryVariant">@color/black_dark</item> <!-- utilizado para el status bar, etc. -->
        <item name="colorOnPrimary">@color/black_light</item> <!-- utilizado para elpor defecto par acentuar en checkboxes inputs, switch, etc. -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_bedu</item>
        <item name="colorSecondaryVariant">@color/red_dark</item>
        <item name="colorOnSecondary">@color/red_orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>