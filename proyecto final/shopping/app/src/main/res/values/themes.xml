<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BeduCompras" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- El color primario es utilizado para el app bar y otros elementos UI primarios-->
        <!-- La variante es un color más oscuro o claro para generar contraste en elementos como
        status bar, etc.   -->
        <item name="colorPrimary">@color/black_bedu</item>
        <item name="colorPrimaryVariant">@color/black_dark</item>

        <!-- Para elementos secundarios como FAB, sliders, switches, progress bar, links, headlines -->
        <item name="colorSecondary">@color/red_bedu</item>
        <item name="colorSecondaryVariant">@color/red_dark</item>

        <!--colorBackground colorea el background de un ViewGroup al parecer (el fondo del parent o de
        un ScrollView i.e.)-->

        <!--colorSurface colorea la superficie de algunos elementos con superficie como CardView,
        la cara de un Expandable ToolBar, views con relleno como un EditText filled, fondo de tabs-->

        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorError">@color/red_bedu</item>

        <!-- los colores ON, nos sirven para generar contraste en los elementos contenido dentro
        de backgrounds, superficies o colores con errores, en el caso de onPrimary y onSecundary son
        para contrastar sobre estos colores
        (el símbolo de + en un FAB tendrá el color colorOnSecondary)-->
        <item name="colorOnBackground">@color/black_bedu</item>
        <item name="colorOnSurface">@color/black_bedu</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


        Material type attributes
        <item name="textAppearanceHeadline1">@style/TextAppearance.BeduCompras.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.BeduCompras.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.BeduCompras.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.BeduCompras.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.BeduCompras.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.BeduCompras.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.BeduCompras.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.BeduCompras.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.BeduCompras.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.BeduCompras.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.BeduCompras.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.BeduCompras.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.BeduCompras.Overline</item>


        <item name="buttonStyle">@style/Widget.BeduCompras.Button</item>
        <item name="bottomNavigationStyle">@style/Widget.BeduCompras.BottomNavigationView</item>
    </style>


    <style name="ThemeOverlay.BeduCompras.Guest" parent="">

        <item name="colorPrimary">@color/red_bedu</item>
        <item name="colorPrimaryVariant">@color/red_dark</item>

        <item name="colorSecondary">@color/black_bedu</item>
        <item name="colorSecondaryVariant">@color/black_dark</item>

        <item name="android:colorBackground">@color/black_bedu</item>
        <item name="colorSurface">@color/black_bedu</item>
        <item name="colorError">@color/red_bedu</item>


        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:textColorPrimary">@color/white</item>

        <item name="textInputStyle">@style/Widget.BeduCompras.InputStyle.Outlined</item>
    </style>

</resources>